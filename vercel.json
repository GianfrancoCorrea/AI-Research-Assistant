{
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "1024mb",
                "devCommand": "uvicorn main:app --host 0.0.0.0 --port 8000"
            }
        },
        {
            "src": "client/**",
            "use": "@vercel/static"
        },
        {
            "src": "client/index.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ]
}